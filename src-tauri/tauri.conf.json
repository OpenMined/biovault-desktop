{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BioVault Desktop",
  "version": "0.1.0",
  "identifier": "org.openmined.biovault-desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BioVault Desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "dialog:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "10.13"
    },
    "targets": [
      "app",
      "appimage",
      "deb",
      "dmg",
      "nsis",
      "rpm"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJENkYyRTIzRkIwM0MyMkIKUldRcndnUDdJeTV2TGZTNk9seHlxd2h2ZUJvYjVobjhxdEQ1MkMreEtpN05HdU85TGpHUEFRaEoK",
      "endpoints": [
        "https://github.com/OpenMined/biovault-desktop/releases/latest/download/release.json"
      ]
    }
  }
}